{
  "name": "@node-steam/id",
  "version": "1.0.0",
  "description": "Module to make SteamID usage and conversion easy",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/node-steam/id",
  "bugs": "https://github.com/node-steam/id/issues",
  "repository": {
    "url": "https://github.com/node-steam/id",
    "type": "git"
  },
  "author": "N|Steam",
  "keywords": [
    "steam",
    "valve",
    "id",
    "typescript",
    "es6",
    "es7"
  ],
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "example/*.js"
  ],
  "contributors": [
    "Silas Rech <silas.rech@protonmail.com> (https://lenovouser.me)"
  ],
  "runkitExampleFilename": "example/runkit.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p .",
    "test": "yarn compile && TS_NODE_PROJECT=test/tsconfig.json ava",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "docs": "typedoc src/index.ts",
    "prepublish": "yarn lint && yarn test && yarn docs"
  },
  "ava": {
    "files": [
      "test/*.ts",
      "test/**/*.ts"
    ],
    "concurrency": 10,
    "verbose": true,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": false,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "devDependencies": {
    "@types/node": "^12",
    "ava": "^2",
    "ts-node": "^8",
    "tsconfig-paths": "^3",
    "tslint": "^5",
    "typescript": "^3"
  },
  "dependencies": {
    "@types/cuint": "0.2.1",
    "cuint": "0.2.2"
  }
}
